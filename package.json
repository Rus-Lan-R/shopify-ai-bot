{
  "name": "ai-assistnat",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prebuild": "pnpm --filter @internal/types build && pnpm --filter @internal/database run build && pnpm --filter @internal/services run build && pnpm --filter @internal/messengers run build",
    "build:shopify": "pnpm run prebuild && pnpm run --filter shopify-app build",
    "start:shopify": "pnpm run --filter shopify-app start",
    "dev:shopify": "pnpm run --filter shopify-app dev",
    "dev": "concurrently \"pnpm --filter server dev:tg\"  \"pnpm --filter server dev:wa\"",
    "dev:tg": "pnpm --filter server dev:tg",
    "dev:wa": "pnpm --filter server dev:wa",
    "dev:server": "pnpm --filter server dev:server",
    "build": "pnpm --filter @internal/types build && pnpm --filter @internal/database build && pnpm --filter @internal/services build && pnpm --filter bots build",
    "lint": "pnpm -r lint",
    "build:chat": "pnpm --filter shopify-app build:chat",
    "docker:build": "docker build -t bots --file Dockerfile.bots ."
  },
  "dependencies": {
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^22.2.0",
    "concurrently": "^8.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.4.0",
    "typescript": "^5.0.0"
  },
  "_moduleAliases": {
    "@internal/services": "packages/services/dist",
    "@internal/database": "packages/database/dist",
    "@internal/types": "packages/types/dist"
  }
}
