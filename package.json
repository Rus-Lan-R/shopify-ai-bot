{
  "name": "ai-assistnat",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:shopify": "shopify app dev --path=apps/shopify-app",
    "dev": "concurrently \"pnpm --filter bots dev:tg\"  \"pnpm --filter bots dev:wa\"",
    "dev:tg": "pnpm --filter bots dev:tg",
    "dev:wa": "pnpm --filter bots dev:wa",
    "build": "pnpm --filter @internal/database build && pnpm --filter @internal/services build",
    "lint": "pnpm -r lint",
    "build:chat": "pnpm --filter shopify-app build:chat"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "module-alias": "^2.2.3"
  },
  "devDependencies": {
    "@types/node": "^22.2.0",
    "concurrently": "^8.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.4.0",
    "typescript": "^5.0.0"
  },
  "_moduleAliases": {
    "@internal/services": "packages/services/dist",
    "@internal/database": "packages/database/dist"
  },
  "resolutions": {
    "@graphql-tools/url-loader": "8.0.16"
  }
}
