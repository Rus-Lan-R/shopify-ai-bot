{
  "name": "shopify-app",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^18.20 || ^20.10 || >=21.0.0"
  },
  "scripts": {
    "build": "npm run build:chat && remix vite:build",
    "dev": "shopify app dev --tunnel-url https://app-test.ngrok.dev:3000",
    "config:link": "shopify app config link",
    "generate": "shopify app generate",
    "deploy": "shopify app deploy",
    "config:use": "shopify app config use",
    "env": "shopify app env",
    "start": "remix-serve ./build/server/index.js",
    "docker:start": "npm run build:chat && npm run setup && npm run start",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "shopify": "shopify",
    "codegen": "graphql-codegen",
    "dev:remix": "remix dev",
    "vite": "vite",
    "vite:dev": "vite",
    "sprite": "ts-node --require tsconfig-paths/register ./scripts/sprite.ts",
    "build:chat": "node esbuild.config.js",
    "heroku": "heroku container:login && heroku container:push web --app chat-assistant-app && heroku container:release web --app chat-assistant-app"
  },
  "dependencies": {
    "@internal/database": "workspace:*",
    "@internal/services": "workspace:*",
    "@internal/types": "workspace:*",
    "@remix-run/dev": "^2.15.0",
    "@remix-run/fs-routes": "^2.15.0",
    "@remix-run/node": "^2.15.0",
    "@remix-run/react": "^2.15.0",
    "@remix-run/serve": "^2.15.0",
    "@shopify/app-bridge-react": "^4.1.6",
    "@shopify/polaris": "^12.0.0",
    "@shopify/polaris-icons": "^9.3.1",
    "@shopify/shopify-api": "^11.12.0",
    "@shopify/shopify-app-remix": "^3.7.0",
    "@shopify/shopify-app-session-storage": "^3.0.17",
    "dayjs": "^1.11.13",
    "esbuild": "^0.25.1",
    "esbuild-plugin-css-modules": "^0.3.0",
    "isbot": "^5.1.0",
    "module-alias": "^2.2.3",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.54.2",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.5",
    "@remix-run/eslint-config": "^2.15.0",
    "@remix-run/route-config": "^2.15.0",
    "@shopify/api-codegen-preset": "^1.1.1",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.2.0",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^10.0.1",
    "happy-dom": "^17.4.4",
    "prettier": "^3.2.4",
    "typescript": "^5.2.2",
    "vite": "^5.1.3"
  },
  "workspaces": [
    "extensions/*"
  ],
  "trustedDependencies": [
    "@shopify/plugin-cloudflare"
  ],
  "author": "ruslan",
  "overrides": {
    "@graphql-tools/url-loader": "8.0.16"
  },
  "resolutions": {
    "@graphql-tools/url-loader": "8.0.16"
  }
}
