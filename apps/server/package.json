{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start:server": "node dist/index.js",
    "start:tg": "node dist/tg-index.js",
    "start:wa": "node dist/wa-index.js",
    "start": "pnpm start:tg & pnpm start:wa",
    "dev": "pnpm build && pnpm start:tg & pnpm start:wa",
    "dev:server": "tsx src/index.ts",
    "dev:tg": "tsup src/bots/tg-index.ts --watch --onSuccess \"pkill -f dist/tg-index.js; node dist/tg-index.js\"",
    "dev:wa": "tsup src/bots/wa-index.ts --watch --onSuccess \"pkill -f dist/wa-index.js; node dist/wa-index.js\""
  },
